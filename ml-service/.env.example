ML_SERVICE_PORT=8000
ML_SERVICE_HOST=0.0.0.0

# Required: Google Gemini API key for embeddings
# Get your API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Required: HuggingFace API token for image captioning
# Get your token at: https://huggingface.co/settings/tokens
HF_API_TOKEN=your_huggingface_token_here

# Optional: HuggingFace model (default: Salesforce/blip2-opt-2.7b)
# Alternative models: Salesforce/blip-image-captioning-base, Salesforce/blip2-opt-6.7b
HF_MODEL=Salesforce/blip2-opt-2.7b
